#!/usr/bin/python

import sys
import fontforge

def is_monospaced(font):
    initial = None
    widths = set()
    is_monospaced = True

    for glyph in font:
        width = font[glyph].width
        widths.add(width)

        if width:
            if initial is None:
                initial = width
            else:
                if width != initial:
                    is_monospaced = False

    return (is_monospaced, widths)

font = fontforge.open(sys.argv[1])

monospaced, widths = is_monospaced(font)

print('monospaced' if monospaced else 'not monospaced')
print(widths)

if not monospaced:
    sys.exit(1)
